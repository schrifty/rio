<form id="profile-form" class="form-horizontal" role="form">
  <fieldset>

    <!-- Text input-->
    <div id="profile-name-div" class="form-group">
      <label for="name" class="col-md-3 control-label">Display Name</label>

      <div class="col-md-7">
        <input id="profile-name" name="name" type="text" placeholder="Name" class="form-control input-sm" required="true">
      </div>
    </div>

    <!-- Text input-->
    <div class="form-group">
      <label for="email" class="col-md-3 control-label">Email</label>

      <div class="col-md-7">
        <input id="profile-email" name="email" type="email" placeholder="Email" class="form-control input-sm" required="true">
      </div>
    </div>

    <!-- File Button -->
    <div class="form-group">
      <label for="upload" class="col-md-3 control-label">Avatar</label>

      <div class="col-md-7">
        <input id="profile-upload" name="upload" class="input-file" type="file">
      </div>
    </div>

